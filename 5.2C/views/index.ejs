<%- include('partials/header') %>

  <main class="main-body">
    <div class="container">
      <div class="row">
        <div class="col s12 center-align">
          <h1 id="heading">Welcome to SIT725 Week 4</h1>
          <p class="flow-text">This is a demo application that Uses rest API to send card data and also connects with
            Mongo db </p>
        </div>
        <div class="col s12 center-align">
          <img class="materialboxed materialboxed-image" src="../public/uploads/race.jpg">
        </div>
        <div class="col s12 center-align">
          <a href="projectModal" class="waves-effect waves-light btn click-me-button modal-trigger" id="clickMeButton"
            data-target="projectModal"><i class="material-icons left">auto_fix_high</i>Add More Cars!</a>
        </div>
      </div>
      <h5>All Projects</h5>
      <div class="row">
        <% projects.forEach(project=> { %>
          <div class="col s12 m4">
            <div class="card">
              <div class="card-image">
                <img src="../public/uploads/<%= project.image %>">
                <span class="card-title">
                  <%= project.title %>
                </span>
              </div>
              <div class="card-content">
                <p>
                  <%= project.description %>
                </p>
              </div>
              <div class="card-action">
                <a href="<%= project.link %>" target="_blank">View Project</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>

    </div>
    </div>
    <!-- Modal Structure -->
    <div id="projectModal" class="modal modal-fixed-footer">
      <div class="row modal-content">
        <div class="container">
          <h4 class="center-align">Add New Project</h4>
          <form action="/projects" method="POST" enctype="multipart/form-data">
            <div class="input-field">
              <input id="title" name="title" type="text" required>
              <label for="title">Project Title</label>
            </div>
            <div class="input-field">
              <input id="link" name="link" type="text" required>
              <label for="link">Project Link</label>
            </div>
            <div class="input-field">
              <textarea id="description" name="description" class="materialize-textarea" required></textarea>
              <label for="description">Description</label>
            </div>
            <div class="file-field input-field">
              <div class="btn">
                <span>Upload Image</span>
                <input type="file" name="image" accept="image/*" required>
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit">Submit</button>
          </form>
        </div>
      </div>
  </main>

  <%- include('partials/footer') %>